
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-md-6 m-auto">
            <div class="card">
                <form action="/login" method="POST">
                    <div class="card-header">
                        <div class="text-center">
                            Login Panel
                        </div>
                    </div>
                    <div class="card-body">
                        <input style="text-align: center;" type="text" name="username" id="login-username" class="form-control my-3 py-2" placeholder="username">
                        <input style="text-align: center;" type="password" name="password" id="login-password" class="form-control my-3 py-2" placeholder="password">
                    </div>
                    <div class="card-footer" style="display: flex; justify-content: flex-end;">
                        <input type="submit" class="btn btn-success" value="Login" name="submit" id="submit-button">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%if(typeof errorlogin != "undefined"){%>
        <div class="text-center">
            <h1 style="color: red;"><%=errorlogin%></h1>
        </div>
    <%}%>
</div>


